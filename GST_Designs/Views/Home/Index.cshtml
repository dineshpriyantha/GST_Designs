@model GST_Designs.Models.ViewModel

@{
    ViewBag.Title = "Home Page";
    ViewBag.MetaKeywords = "3dprinting, 3ddesign, 3d, printing, manufacturing, srilanka, craft, additive manufacturing, fdm, design, modeling, 3dprintingsrilanka, Customized, gifts, souvenirs, prototype";
}

<!-- Masthead-->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 col-md-8 col-sm-12">
                <h1 class="text-uppercase text-white font-weight-bold">GST Designs</h1>
                <hr class="divider my-4" />
                <p class="text-white-75 font-weight-light mb-5">Convert your 3D imagination into Reality</p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">Find Out More</a>               
               
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12">
                <div class="row">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">                        
                        <div class="carousel-inner">
                            
                            @foreach (var item in Model.GST_Card.Take(1))
                            {
                                <div class="carousel-item active">
                                    <div class="row">
                                        <div class="card">
                                            @foreach (var itemImg in Model.GST_FileDetail.Where(x => x.CardId.Equals(item.CardId)))
                                            {
                                                <img src="/Content/assets/img/admin/@itemImg.Id@itemImg.Extension" class="d-block w-100" height="244" />
                                            }
                                            <div class="card-body">
                                                <h5 class="card-title border-bottom pb-3">@Html.DisplayFor(model => item.Title)                                                                                                 
                                                    <div class="float-right d-inline-flex share fb-share-button" data-href="http://gstteq.com/" data-layout="button_count" data-size="small">
                                                    <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fgstteq.com%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore"><i class="fas fa-share-alt text-primary"></i></a>
                                                    </div>
                                                 </h5>
                                                <p class="card-text">@Html.DisplayFor(model => item.Description)</p>
                                                @*<a href="#" class="float-right">Read more <i class="fas fa-angle-double-right"></i></a>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }


                            @foreach (var item in Model.GST_Card.Skip(1))
                            {
                                <div class="carousel-item ">
                                    <div class="row">
                                        <div class="card">
                                            @foreach (var itemImg in Model.GST_FileDetail.Where(x => x.CardId.Equals(item.CardId)))
                                            {
                                                <img src="/Content/assets/img/admin/@itemImg.Id@itemImg.Extension" class="d-block w-100" height="244" />
                                            }
                                            <div class="card-body">
                                                <h5 class="card-title border-bottom pb-3">@Html.DisplayFor(model => item.Title) 
                                                    <div class="float-right d-inline-flex share fb-share-button" data-href="http://gstteq.com/" data-layout="button_count" data-size="small">
                                                        <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fgstteq.com%2F&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore"><i class="fas fa-share-alt text-primary"></i></a>
                                                    </div>
                                                </h5>
                                                <p class="card-text">@Html.DisplayFor(model => item.Description)</p>
                                                @*<a href="#" class="float-right">Read more <i class="fas fa-angle-double-right"></i></a>*@
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>                     

                        <div class="float-right navi">
                            <a class="" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon ico" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon ico" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>              
            </div>
        </div>
    </div>
</header>
